{{!< default}} {{!-- The tag above means: insert everything in this file into the {body} of the default.hbs template
    --}} {{#match @custom.publication_cover_style "!=" "None" }} <div
        class="site-header-content{{#match @custom.publication_cover_style " Large"}} large{{/match}}">
            <div class="site-header-cover">
            <h1 class="site-title">
                {{#if @site.logo}}
                <img class="site-logo" src="{{img_url @site.logo size=" m"}}" alt="{{@site.title}}" />
                {{else}}
                {{@site.title}}
                {{/if}}
            </h1>
            <p>{{@site.description}}</p>
        </div>
    </div>
    {{/match}}

    {{^is "paged"}}
        {{#get "posts" limit = "1"}}
            {{#foreach posts}}
            <div class="last-post inner">
                <div class="image-last-post">
                    <img src="{{img_url feature_image size="s"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                </div>
                <div class="content-last-post">
                    <h2>
                        {{title}}
                    </h2>
                    <p>
                        {{excerpt}}
                    </p>
                </div>
            </div>
            {{/foreach}}
        {{/get}}
    {{/is}}

    <div class="featured-articles inner">
        <h2 class="featured-heading">Featured Articles</h2>
        <div class="rect-square-box">
            <a href="{{url}}">
                <div class="featured-wraper-rect">
                    {{#get "posts" include = "authors,tags" filter="featured:true" limit = "1"}}
                        {{#foreach posts}}
                            <div class="rectangle-post">
                                <div class="linear">
                                    <p class="group">
                                        {{primary_tag.name}}
                                    </p>
                                    <h3 class="name">{{title}}</h3>
                                    <p class="dec">
                                        {{excerpt}}
                                    </p>
                                    <span class="owner">
                                    {{primary_author.name}}
                                    </span>
                                </div>
                            </div>
                        {{/foreach}}
                    {{/get}}
                </div>
            </a>
            <div class="square-box-posts">
                {{#get "posts" filter="featured:true" include = "authors,tags" limit = "5"}}
                    {{#foreach posts from="2"}}
                        <div class="featured-wraper">
                            <a href="{{url}}">
                                <div class="sq-post">
                                    <div class="sq-image">
                                        <img src="{{img_url feature_image size="s"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                                    </div>
                                    <div class="sq-content">
                                        <p class="content-group">{{primary_tag.name}}</p>
                                        <h4 class="heading">{{title}}</h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>
    </div>
    {{!-- The main content area --}}
    <main id="site-main" class="site-main outer">
        <div class="inner posts">

            <div class="post-feed{{#match @custom.feed_layout " List"}} list{{/match}}">
                {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

                {{/foreach}}
            </div>

        </div>
    </main>